@model Blog.Features.BlogEntry.Create.CreateEditCommandBase

<div class="form-group">
    <label asp-for="@Model.Title">Title</label>
    <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
    <span asp-validation-for="@Model.Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Content">Content</label>
    <textarea asp-for="@Model.Content" class="form-control" rows="10" placeholder="Blog content here"></textarea>
    <span asp-validation-for="@Model.Content" class="text-danger"></span>
</div>
