@model Blog.Features.BlogEntry.Edit.Command
@{
    ViewData["Title"] = "Update Blog Entry";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            @Html.HiddenFor(m => m.Id)
            @Html.Partial("CreateEditPartial")
            <button type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-default">Delete</button>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}